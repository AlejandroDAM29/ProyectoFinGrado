<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeProyectoFinGrado" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Aquí pondré los valores que no cambian de los componentes de la aplicación.
    ______________________________________________________________________________________________________________________________________________-->

    <!--Estilo para el splashScreen-->
    <style name="SplashScreen" parent="ThemeProyectoFinGrado">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <!--Estilo activity toolbar-->
    <style name="barra_toolbar">
        <item name="android:background">@drawable/degradado_barra_principal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Estilo actividad home-->
    <style name="botones_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/corners_botones_home</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

</resources>